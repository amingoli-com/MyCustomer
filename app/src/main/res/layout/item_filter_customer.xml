<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginStart="@dimen/_7sdp"
    android:layout_marginEnd="@dimen/_7sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:padding="@dimen/_7sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_filter"
                android:padding="@dimen/_5sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>

            <TextView
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/colorDesc"
                android:text="@string/show_customer_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="مشتریانی که حداقل ۲۰۰٬۰۰۰ تومان خرید کرده ند"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/colorDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="مشتریانی که حداکثر ۴۰۰٬۰۰۰ تومان خرید کرده ند"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/colorDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="مشتریانی که حداقل ۵ دفعه خرید کرده ند"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/colorDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="مشتریانی که حداکثر ۱۵ دفعه خرید کرده ند"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/colorDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="مشتریانی که میانگین خریدشان ۵۰۰ هزار تومان است"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/colorDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>