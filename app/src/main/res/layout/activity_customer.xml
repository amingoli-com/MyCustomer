<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:background="@drawable/gradient_background"
  tools:context=".ActivityCustomer">

    <include
        android:id="@+id/include_empty"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/include_empty_add_customer"/>

    <include
        android:id="@+id/include_load"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/item_loading"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
        android:text="لیست مشتریان"
        android:textSize="@dimen/_14ssp"
        android:paddingVertical="@dimen/_10sdp"
        android:textAlignment="center"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"/>

        <include
            android:id="@+id/include_search"
            layout="@layout/item_serach"/>

      <Button
        android:id="@+id/btnExportExcel"
        android:drawableStart="@drawable/baseline_folder_shared_24"
        android:drawableTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="خروجی مشتریان صورت CSV"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginHorizontal="@dimen/_5sdp"/>

        <include
            android:visibility="gone"
            android:id="@+id/filter"
            layout="@layout/item_filter_customer"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</RelativeLayout>