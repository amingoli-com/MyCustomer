<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_25sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_7ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp">
            <ImageView
                android:id="@+id/plusAmount"
                android:background="#82125201"
                android:padding="@dimen/_7sdp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/amount"
                android:padding="@dimen/_5sdp"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/removeAmount"
                android:layout_toEndOf="@+id/plusAmount"
                android:textAlignment="center"
                android:textColor="@color/colorTitle"
                android:textStyle="bold"
                android:textSize="@dimen/_17ssp"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="3"
                android:maxLines="1"
                android:text="1"
                android:backgroundTint="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="UnusedAttribute" />

            <ImageView
                android:id="@+id/removeAmount"
                android:background="#6E6D0000"
                android:padding="@dimen/_7sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_remove_24"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>




</RelativeLayout>