<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/iranyekan_regular</item>
    </style>

    <style name="ActivityMainTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ActivityMainTitle_sales">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>

    <style name="ActivityMainValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/colorDesc</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="CardView_MainActivity">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
    </style>

    <style name="LinearLayout_vmw_padding">
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="LinearLayout_vmw">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayout_vmm">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LinearLayout_vww">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RelativeLayout_ww">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>